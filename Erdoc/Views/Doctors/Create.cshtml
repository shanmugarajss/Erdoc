<div>
    @Html.ActionLink("Back to Doctor List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
       
            $("#datetimepicker").datetimepicker(
                {
                    @*defaultDate: '@Model.Dob',*@
                    showTodayButton: true,
                    format: 'YYYY-MM-DD HH:mm',
                    showClose: true,
                    showClear: true,
                    toolbarPlacement: 'top',
                    stepping: 15
                });
      
</script>
}
